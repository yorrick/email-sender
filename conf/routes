# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

POST    /sms/api/twilio				    ems.controllers.TwilioController.sms()
POST    /sms/api/mailgun/success	    ems.controllers.MailgunController.success()
GET     /sms/					        ems.controllers.SmsController.list()
GET     /sms/updates.socket             ems.controllers.SmsController.updatesSocket()
GET     /sms/updates.js                 ems.controllers.JavascriptController.updatesJs()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.at(path="/public", file)




# Home page
GET        /                    @ems.controllers.Application.index
GET        /only-twitter        @ems.controllers.Application.onlyTwitter
GET        /link-result         @ems.controllers.Application.linkResult
GET        /current-user        @ems.controllers.Application.currentUser
GET        /custom/login        @ems.controllers.CustomLoginController.login
GET        /custom/logout       @ems.controllers.CustomLoginController.logout

->         /auth                securesocial.Routes
