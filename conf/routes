# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                               ems.controllers.Application.index()
POST    /sms/api/twilio				    ems.controllers.SmsService.twilioSms()
POST    /sms/api/mailgun/success	    ems.controllers.SmsService.mailgunSuccess()
GET     /sms/					        ems.controllers.SmsService.list()
GET     /sms/updates.socket             ems.controllers.SmsService.updatesSocket()
GET     /sms/updates.js                 ems.controllers.JavascriptController.updatesJs()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
# GET     /webjars/*file              controllers.WebJarAssets.at(file)

