# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                            @ems.controllers.Application.index

# Sms API
POST        /sms/api/twilio				ems.controllers.TwilioController.sms()
POST        /sms/api/mailgun/success	ems.controllers.MailgunController.success()

# Sms pages
GET         /sms/					    @ems.controllers.SmsController.list
GET         /sms/updates.socket         @ems.controllers.SmsController.updatesSocket
GET         /sms/updates.js             ems.controllers.JavascriptController.updatesJs()

# Auth pages
GET         /login                      @securesocial.controllers.LoginPage.login
GET         /logout                     @securesocial.controllers.LoginPage.logout
GET         /authenticate/:provider     @securesocial.controllers.ProviderController.authenticate(provider, redirectTo: Option[String])
GET         /account                    @ems.controllers.AuthController.account

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.at(path="/public", file)
GET     /secure-social-assets/*file     securesocial.controllers.Assets.at(path = "/public/securesocial", file)
