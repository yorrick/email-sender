# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                            @ems.controllers.Application.index

# forwardings API
POST        /forwarding/api/twilio/receive		@ems.controllers.TwilioController.receive()
POST        /forwarding/api/mailgun/receive   	@ems.controllers.MailgunController.receive()
POST        /forwarding/api/mailgun/event   	@ems.controllers.MailgunController.event()

# forwarding pages
GET         /forwarding/					    @ems.controllers.ForwardingController.list
GET         /forwarding/updates.socket          @ems.controllers.ForwardingController.updatesSocket
GET         /forwarding/updates.js              @ems.controllers.JavascriptController.updatesJs()

# Auth pages
GET         /login                      @securesocial.controllers.LoginPage.login
GET         /logout                     @securesocial.controllers.LoginPage.logout
GET         /authenticate/:provider     @securesocial.controllers.ProviderController.authenticate(provider, redirectTo: Option[String])

# Account page
GET         /account                    @ems.controllers.AccountController.account
POST        /account                    @ems.controllers.AccountController.accountUpdate

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.at(path="/public", file)
GET     /secure-social-assets/*file     securesocial.controllers.Assets.at(path = "/public/securesocial", file)

# Javascript routes
GET         /javascriptRoutes           @ems.controllers.JavascriptController.javascriptRoutes()
